<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLogin"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.conoz.singletour.fragment.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <!--<TextView
            android:id="@+id/tvLoginTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:gravity="left|center_vertical"
            android:textColor="#555555"
            android:textSize="16sp"
            android:text="로그인" />

        <View
            android:id="@+id/vLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvLoginTit"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/common_line" />-->

        <RelativeLayout
            android:id="@+id/rlListRowAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/rlListRow1"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="0dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="이메일" />

                <EditText
                    android:id="@+id/etUserEmail"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tvEmail"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_style_input"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:hint="이메일"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textColor="#b2b2b2"
                    android:textCursorDrawable="@null"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textSize="12sp" >
                    <requestFocus />
                </EditText>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlListRow2"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_below="@+id/rlListRow1"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvUserPwd"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="left|center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="비밀번호" />

                <EditText
                    android:id="@+id/etUserPwd"
                    android:layout_width="132dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tvUserPwd"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_style_input"
                    android:ems="10"
                    android:gravity="left|center_vertical"
                    android:hint="비밀번호"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textColor="#b2b2b2"
                    android:textCursorDrawable="@null"
                    android:inputType="textVisiblePassword"
                    android:imeOptions="actionDone"
                    android:textSize="12sp" >
                    <requestFocus />
                </EditText>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlListRow3"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_below="@+id/rlListRow2"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:text="로그인" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
